{
  "testFramework": "pytest",
  "testDirectory": "tests",
  "sourceDirectory": "backend",
  "language": "python",
  "coverage": {
    "enabled": true,
    "threshold": 80,
    "reportFormat": ["html", "terminal"]
  },
  "testPatterns": [
    "test_*.py",
    "*_test.py"
  ],
  "excludePatterns": [
    "__pycache__",
    "*.pyc",
    ".pytest_cache"
  ],
  "environment": {
    "TESTING": "true",
    "GOOGLE_SHEETS_ID": "test_sheet_id"
  }
}
